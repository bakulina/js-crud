 }}
<main class="main">
  <section>
     <div class="form">
    <h1 class="form_title">Створити користувача</h1>
  <form  method="POST" action= "/user-create">
    <div class="form_content">
      <div class="form_field ">
<label for="email"class="form_lable">Email adressa</label>
<input type="email"name="email" class="form_input">
      </div>     
    <div class="form_field ">
<label for="login"class="form_lable">login</label>
<input type="login"name="login" class="form_input">
    </div> 
     <div class="form_field ">
<label for="password"class="form_lable">password</label>
<input type="password"name="password" class="form_input">
    </div> 
    <button class="form_button">click</button>
   
    </div> 
  </form>
 </div>
  </section>


  <section>
  <div class="form">
     <h1 class="form_title">список користувачив</h1>
     <div class="user-list">
      {{#with data.users}}
      {{#if isEmpty}}
      <mark> пустий</mark>
      {{else}}
      <ul>
      {{#each list}}
      <li>{{email}} | {{login}}|{{password}}|{{id}}<a href="/user-delete?id={{id}}">видилити</a> </li>
      {{/each}}
      </ul>
      {{/if}}
      {{/with}}
     </div>
  </div>
  </section>
  <section>
     <div class="form">
    <h1 class="form_title">оновити пошту користувача</h1>
  <form  method="POST" action= "/user-update">
    <div class="form_content">
      <div class="form_field ">
<label for="id"class="form_lable">ID</label>
<input type="id"name="id" class="form_input">
      </div>     
    <div class="form_field ">
<label for="email"class="form_lable"> new Email adressa</label>
<input type="login"name="login" class="form_input">
    </div> 
     <div class="form_field ">
<label for="password"class="form_lable">password</label>
<input type="password"name="password" class="form_input">
    </div> 
    <button class="form_button">newclick</button>
   
    </div> 
  </form>
 </div>
  </section>

</main>
 

